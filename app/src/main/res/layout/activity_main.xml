<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8EFFD">

    <ImageView
        android:id="@+id/wave_background"
        android:layout_width="440dp"
        android:layout_height="557dp"
        android:layout_marginTop="-8dp"
        android:scaleType="fitXY"
        android:src="@drawable/rectangle"
        android:contentDescription="Wave background" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="302dp"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-470dp"
        android:contentDescription="Main logo"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/slid"
        android:layout_width="357dp"
        android:layout_height="68dp"
        android:layout_marginTop="299dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Slider"
        android:scaleType="fitXY"
        android:src="@drawable/component_2" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="211dp"
        android:layout_height="55dp"
        android:textFontWeight="700"
        android:text="Hey There!"
        android:fontFamily="@font/manrope_regular"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#2E236C"
        android:layout_marginTop="-225dp"
        android:layout_marginLeft="-90dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/sub_text"
        android:layout_width="333dp"
        android:layout_height="229dp"
        android:textFontWeight="500"
        android:fontFamily="@font/manrope_bold"
        android:text="Move your body with yoga and be fit, start your journey today."
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"/>
</LinearLayout>
