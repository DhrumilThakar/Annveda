<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8EFFD">

    <ImageView
        android:id="@+id/wave_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/rectangle"
        android:contentDescription="Wave background" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-400dp"
        android:contentDescription="Main logo"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/slid"
        android:layout_width="357dp"
        android:layout_height="68dp"
        android:layout_marginTop="350dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Slider"
        android:scaleType="fitXY"
        android:src="@drawable/component_2" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="-105dp"
        android:layout_marginTop="-300dp"
        android:fontFamily="@font/manrope_regular"
        android:text="Hey There!"
        android:textColor="#2E236C"
        android:textFontWeight="700"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sub_text"
        android:layout_width="333dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Move your body with yoga and be fit, start your journey today."
        android:textColor="#000000"
        android:textFontWeight="500"
        android:textSize="20dp" />
</LinearLayout>
